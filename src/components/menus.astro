---
import { MENUS } from "../config";

const currentPath = Astro.url.pathname;
---

<div class="flex flex-row gap-4 flex-wrap">
  {
    MENUS.map((item) => {
      const isActive = item.link === "/" ? currentPath === "/" : currentPath.startsWith(item.link);

      return (
        <a
          href={item.link}
          target={item.target}
          class={`h-full transition-colors hover:text-orange-700 ${
            isActive ? "text-orange-700 font-semibold" : "text-neutral-800"
          }`}
        >
          {item.title}
        </a>
      );
    })
  }
</div>
