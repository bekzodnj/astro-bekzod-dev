---
type Project = {
  title: string;
  description: string;
  link: string;
  cover?: string;
  tags?: string[];
};

type Props = {
  project: Project;
};

const { project } = Astro.props;
---

<div class="flex flex-col gap-4">
  {
    project.cover && (
      <a href={project.link} target="_self">
        <img
          src={`${project.cover}?w=800&q=80`}
          alt="cover"
          class="w-full aspect-video rounded-lg self-auto object-cover"
        />
      </a>
    )
  }
  <div class="flex flex-col gap-2">
    <div class="flex gap-2">
      {
        project.tags?.map((tag) => (
          <span class="bg-gray-200 text-gray-700 text-xs font-medium px-2 py-1 rounded">{tag}</span>
        ))
      }
    </div>
    <a href={project.link} target="_self">
      <h1 class="text-3xl font-title font-black">{project.title}</h1>
    </a>
    <a href={project.link} target="_self">
      <p class="text-sm text-zinc-700">{project.description}</p>
    </a>
  </div>
</div>
